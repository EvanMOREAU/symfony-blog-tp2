<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>F.C. Pro</title>
  <link rel="icon" href="images/fc_pro.png">
  {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
  {% block stylesheets %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link rel="stylesheet" href="starter-template.css">
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css" />
  {{ encore_entry_link_tags('app') }}
  {% endblock %}

  {% block javascripts %}
  {{ encore_entry_script_tags('app') }}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
  {% endblock %}
</head>

<body>

  <!--Top anchor-->
  <a name="top"></a>

  <!--Back to top button-->
  <a href="#" id="toTopBtn" class="cd-top text-replace js-cd-top cd-top--is-visible cd-top--fade-out"
    data-abc="true"></a>

  <!--Navbar-->
  <nav class="navbar navbar-expand-lg bg-dark text-white fixed-top">
    <div class="container-fluid">

      <!--Logo-->
      <a class="navbar-brand text-white" href="/">FC-Pro</a>
      <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon text-white"></span>
      </button>

      <!--Home-->
      <div class="collapse navbar-collapse text-white" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-white">
          <li class="nav-item text-white">
            <a class="nav-link active text-white" aria-current="page" href="/">{{'Home'|trans}}</a>
          </li>

          <!--Our formations-->
          <li class="nav-item dropdown text-white">
            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              {{'Our formations'|trans }}
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">{{'Upcoming formations'|trans}}</a></li>
              <li><a class="dropdown-item" href="#">{{'Suggest a formation'|trans}}</a></li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li><a class="dropdown-item" href="#">{{'Give your opinion'|trans}}</a></li>
            </ul>
          </li>

          <!--Our center-->
          <li class="nav-item text-white">
            <a class="nav-link inactive text-white" aria-current="page" href="#">{{'Our center'|trans}}</a>
          </li>

          {% if is_granted('ROLE_ADMIN') %}

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              Formations
            </a>

            <!--Pages-->
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/formation">{{'Formations list'|trans}}</a></li>
              <li><a class="dropdown-item" href="/formation/new">{{'New formation'|trans}}</a></li>
            </ul>

            {% endif %}

            {% if is_granted('ROLE_SUPER_ADMIN') %}

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                Pages
              </a>
  
              <!--Pages-->
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/page">{{'Pages list'|trans}}</a></li>
                <li><a class="dropdown-item" href="/page/new">{{'New page'|trans}}</a></li>
              </ul>

            {% endif %}
          </li>
        </ul>

        <!--Registration/Login/Logout-->
        <ul class="navbar-nav align-right mb-2 mb-lg-0 text-white">
          <li class="nav-item text-white">

            <!--Logout-->
            {% if app.user %}
            <a class="nav-link text-white btn btn-danger" aria-current="page" href="/logout">{{'Sign out'|trans}}</a>
            {% else %}

            <!--Login-->
          <li class="nav-item text-white">
            <a class="nav-link text-white" aria-current="page" href="/login">{{'Sign in'|trans}}</a>
          </li>

          <!--Register-->
          <li class="nav-item text-white">
            <a class="nav-link text-white btn btn-primary" aria-current="page" href="/register">{{'Sign up'|trans}}</a>
          </li>
          {% endif %}
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <br><br>

  <div class="col-lg-8 mx-auto p-4 py-md-5">
    <main>
      {% block body %}{% endblock %}
    </main>

    <!--Footer-->
    <footer class="pt-5 my-5 text-muted">
      &copy; {{'Created by the SIO team'|trans}}
    </footer>

  </div>

</body>

</html>